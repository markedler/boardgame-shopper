@model HomeViewModels.Index

@{
    ViewData["Title"] = "Board Game Shopper";
}
    <div class="jumbotron">
        <h2 class="display-4">Welcome to Board Game Shopper</h2>
        <p class="lead">
            Do you live in Australia and want to find the best possible for a particular board game?
            <br />
            Board Game Shopper will search across <strong>@Html.ActionLink(Model.SiteCount.ToString(), "Index", "Store")</strong> different sites for you, ensuring you always get the lowest price on <strong>@Html.ActionLink(Model.GameCount.ToString(), "Index", "List")</strong> games!
        </p>

        <form asp-controller="List" asp-action="Index" method="post" class="form-inline justify-content-center">
            <div class="row">
                <div class="col-lg-12 text-center">
                    @Html.TextBoxFor(model => model.Search, new { @placeholder = "Search", @class = "form-control form-control-lg", @style="width: 500px" })
                    <button type="submit" class="btn green">Find It!</button>
                </div>
            </div>
        </form>

    </div>

<div class="row">
    <div class="card-group">
     
            @foreach (var game in Model.Games)
        {
            <div class="col-lg-4 mb-5">
                <div class="card h-100 text-center">
                    <a href="@game.Url" target="_blank" class="text-decoration-none">
                        <div class="clearfix p-2">
                            <span class="float-right small">@game.SiteName</span>
                        </div>
                        <div class="card-body clearfix">
                            <p>
                                <img src="@game.Image" alt="@game.Name" style="height: 150px">
                            </p>
                            <h4>@string.Format("{0:c}",game.Price)</h4>
                        </div>
                        <div class="card-footer">
                            <h5 class="card-title h-100">@game.Name</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>